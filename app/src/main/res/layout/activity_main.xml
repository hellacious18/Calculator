<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:hint="0"
        android:layout_weight="3"
        android:gravity="bottom|right" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/AC"
                android:text="AC"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/bracesOpen"
                android:text="("
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/bracesClose"
                android:text=")"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/modulo"
                android:text="%"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/b7"
                android:text="7"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/b8"
                android:text="8"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/b9"
                android:text="9"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/divide"
                android:text="/"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/b4"
                android:text="4"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/b5"
                android:text="5"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/b6"
                android:text="6"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/multiply"
                android:text="*"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/b1"
                android:text="1"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/b2"
                android:text="2"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/b3"
                android:text="3"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/subtract"
                android:text="_"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/b0"
                android:text="0"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/dot"
                android:text="."
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/equal"
                android:text="="
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/add"
                android:text="+"
                android:layout_weight="1"
                android:padding="32dp"
                android:textSize="20dp"
                android:layout_margin="5dp" />

        </TableRow>
    </TableLayout>
</LinearLayout>
